{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "strict": true,
        "baseUrl": ".",
        "outDir": "src",
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "include": [
            "dev/**/*"
        ],
        "exclude": [
            "scripts/**/*",
            "dizipal.config.js",
            "src/**/*"
        ]
    }
}